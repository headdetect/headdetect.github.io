{
  "name": "brayden-lopez-portfolio",
  "version": "2.0.0",
  "description": "Brayden Lopez's Portfolio. UX Developer, DevOps, and Full Stack Developer.",
  "author": "headdetect",
  "license": "MIT",
  "repository": "git@github.com:headdetect/headdetect.github.io.git",
  "scripts": {
    "deploy": "rm -rf ../headdetect.github.io-master/* && cp -R build/* ../headdetect.github.io-master/ && cp CNAME ../headdetect.github.io-master/CNAME && cd ../headdetect.github.io-master/ && git checkout master && git add . && git commit -am 'Updating...' && git push origin master",
    "prestart": "npm run build",
    "start": "npm-run-all -p watch server",
    "scss": "node-sass src/scss/style.scss build/css/style.css --output-style compressed --indent-width 4 --source-map build/css/ --importer node_modules/node-sass-globbing/index.js",
    "autoprefixer": "npx postcss --use autoprefixer -r build/css/style.css",
    "ejs": "ejs-cli --base-dir src/templates/pages/ --file '**/**.ejs' --out build/ --options site.json",
    "server": "browser-sync start -c bs-config.js",
    "clean": "rimraf build/{css/*,js/*,images/*,webfonts/*}",
    "build": "npm run clean & mkdir -p build/js build/css & npm-run-all -p build:* & npm run ejs",
    "build:assets": "mkdir -p build/assets & cp src/assets/* build/assets",
    "build:css": "npm-run-all scss autoprefixer",
    "build:js": "npx babel src/js --out-dir build/js --source-maps --presets minify",
    "build:images": "imagemin src/images/* -o build/images",
    "build:fontawesome": "mkdir -p build/webfonts/ && cp node_modules/@fortawesome/fontawesome-pro/webfonts/* build/webfonts/",
    "build:bootstrap": "cp node_modules/bootstrap/dist/js/bootstrap.bundle.js build/js/bootstrap.js",
    "build:particles": "cp node_modules/particlesjs/dist/particles.js build/js/particles.js",
    "watch": "npm-run-all -p watch:* build:fontawesome build:bootstrap",
    "watch:assets": "onchange 'src/assets/' -- npm run build:assets",
    "watch:css": "onchange 'src/scss/' -- npm run build:css",
    "watch:js": "onchange 'src/js/' -- npm run build:js",
    "watch:ejs": "onchange 'src/templates/' -- npm run ejs",
    "watch:images": "onchange 'src/images/' -e '**/*.DS_Store' -- npm run build:images"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@fortawesome/fontawesome-pro": "^5.3.1",
    "autoprefixer": "^9.1.3",
    "babel-preset-minify": "^0.4.3",
    "bootstrap": "^4.1.3",
    "browser-sync": "^2.24.7",
    "ejs-cli": "^2.0.1",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.9.3",
    "node-sass-globbing": "0.0.23",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "uglify-js": "^3.4.8",
    "particlesjs": "^2.2.3"
  }
}
